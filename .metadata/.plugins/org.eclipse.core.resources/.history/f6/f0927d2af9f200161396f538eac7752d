package randomguessmatch;

/**
 * @author IP133225
 *
 */
import javax.swing.JOptionPane;
public class RandomGuess2 {

	/**
	 * @param args
	 */
	public static void main(String[] args)
	{
		int guess;
		int result;
		String msg;
		final int Low = 1;
		final int HIGH = 10;
		result = Low + (int) (Math.random() * HIGH);
		guess = Integer.parseInt(JOptionPane.showInputDialog(null, "Try to guess my number between " + Low + "and" + HIGH));
		
		if(guess == result)
			msg = "\n Your Guess was RIGHT!";
			else
				if (guess < result)
					msg = "\n Your Guess was too low";
				else
					msg = "\n Your guess was too low";
			JOptionPane.showMessageDialog(null, "The number is " + result + msg);
	}

}