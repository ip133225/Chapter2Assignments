package gameZone;
import java.util.Random;

import javax.swing.JOptionPane;
/**
 * @author IP133225
 *
 */
public class RockPaperScissors {

	/**
	 * @param args
	 */
	public static void main(String[] args)
	{
		int user;
		int computer;
		String msg = null;
		String userPick;
		String computerPick;
		final int LOW = 0;
		final int HIGH = 2;
		Random r = new Random();
		computer = r.nextInt(2);
		
		user = Integer.parseInt(JOptionPane.showInputDialog(null, "Type the following numbers \n0 for Rock \n1 for Paper \n2 for Scissors "));
		
		if(user == 0 && computer == 0)
		{
			msg = "Tie"; 
		}
		if(user == 1 && computer == 1)
		{
			msg = "Tie"; 
		}
		if(user == 2 && computer == 2)
		{
			msg = "Tie"; 
		}
		

		if(user == 0 && computer == 1)
		{
			msg = "Rock, computer wins"; 
		}
		if(user == 1 && computer == 0)
		{
			msg = "Paper, computer wins"; 
		}
		
		if(user == 2 && computer == 1)
		{
			msg = "Scissors, computer wins"; 
		}
	
		
		if(user == 2 && computer == 2)
		{
			msg = "Rock, human wins"; 		}
		if(user == 2 && computer == 2)
		{
			msg = "Paper, human wins"; 
		}
		if(user == 2 && computer == 2)
		{
			msg = "Scissors, human wins"; 
		}
	
		JOptionPane.showInternalMessageDialog(null, msg);

	}

}
